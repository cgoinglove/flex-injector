{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {},
    "type-check": {},
    "test": {
      "dependsOn": ["build:ts-dependency-injector"],
      "inputs": ["**/*.test.ts", "**/*.test.tsx", "vitest.config.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["ts-dependency-injector"]
}
